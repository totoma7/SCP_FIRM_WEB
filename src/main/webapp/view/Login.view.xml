<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:t="sap.ui.table"
    xmlns:f="sap.ui.Layout.form" xmlns:l="sap.ui.Layout" xmlns:core="sap.ui.core"
    controllerName="ecbank.controller.Login">
    <App id="idApp">
	    <Page title="Login Form">
	        <content>
	            <VBox fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center">
	                <items>
	                    <Input id="ID" placeholder="User ID" value="{/USER/ID}"></Input>
	                    <Input id="PASS" placeholder="Password" type="Password" value="{/USER/PASS}"></Input>
	                    <Button width="12rem" text="Login" type="Emphasized" press="onLogin"></Button>
	                </items>
	            </VBox>
	        </content>
	    </Page>
    </App>
</mvc:View>